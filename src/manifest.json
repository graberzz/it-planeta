{
  "name": "ReSTYLE",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "img/ReSTYLE_active_256.png"
  },
  "content_scripts": [
        {
            "matches": [ "<all_urls>"],
            "js":["injected.bundle.js"]
        }
    ],
  "icons": {
    "128": "img/ReSTYLE_256.png" 
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false  
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["tabs", "activeTab", "pageCapture", "storage", "<all_urls>"]
}